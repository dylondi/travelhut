<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="175dp"
    android:background="@drawable/place_image_rounded_bg"
    android:padding="4dp">

    <ImageView
        android:id="@+id/event_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/place_image_rounded_bg"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="30dp"
        android:fillViewport="false"
        android:requiresFadingEdge="vertical"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_gradient_top_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_item_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">


            <TextView
                android:id="@+id/event_item_place_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_weight="50"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/event_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="right"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/event_item_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/RedAccent" />
</RelativeLayout>


