<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--top toolbar -->
    <RelativeLayout
        android:id="@+id/rel_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_top_tabs" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/trips_nav_layout"
        android:layout_below="@id/rel_layout1">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_trips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tabs"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_blue"
            app:tabIndicatorColor="@color/white"
            app:tabRippleColor="@android:color/transparent"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/light_blue" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_new_trip"
            android:id="@+id/floating_button_trips"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="30dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/trips_nav_layout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <include layout="@layout/layout_bottom_navigation_view" />
    </RelativeLayout>


</RelativeLayout>