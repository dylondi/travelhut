<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.travelhut">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.authentication.RegisterLoginActivity"></activity>
        <activity android:name=".views.onboarding.OnboardingScreensActivity" />
        <activity android:name=".views.splash.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.main.newsfeed.NewsFeedActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".views.main.planner.PlannerActivity"></activity>
        <activity android:name=".views.main.profile.ProfileActivity"></activity>
        <activity android:name=".views.main.map_search.MapSearchActivity"></activity>
        <activity android:name=".views.main.trips.TripsActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>